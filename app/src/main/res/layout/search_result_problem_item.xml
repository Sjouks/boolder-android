<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/circuit_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/circuit_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="20" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/problem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="180dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toStartOf="@id/problem_grade"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/circuit_color"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="La TraversÃ©e du Surplom d'Isatis" />

    <TextView
        android:id="@+id/problem_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toStartOf="@id/problem_area"
        app:layout_constraintStart_toEndOf="@id/problem_name"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="7a+" />

    <TextView
        android:id="@+id/problem_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintStart_toEndOf="@id/problem_grade"
        app:layout_constraintEnd_toStartOf="@id/tick"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        tools:text="Rocher Canon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        app:backgroundTint="@color/primary"
        app:cornerRadius="12dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_checkmark"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="18dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        app:backgroundTint="@color/yellow"
        app:cornerRadius="12dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_outline_bookmark"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="18dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/circuit_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/circuit_color"
        app:strokeColor="@color/yellow"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>